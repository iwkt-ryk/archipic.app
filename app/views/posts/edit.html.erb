<header>
<div class="header-logo">
  <% if @current_user %>
    <%= link_to("archipicture", "/posts/index") %>
  <% else %>
    <%= link_to("archipicture", "/") %>
  <% end %>
</div>
<ul class="header-menus">
  <% if @current_user %>
    <li>
      <%= link_to("投稿一覧","/posts/index") %>
    </li>
    <li>
      <%= link_to("新規投稿","/posts/#{@current_user.id}/new") %>
    </li>
    <li>
      <%= link_to("#{@current_user.name}さん", "/users/#{@current_user.id}") %>
    </li>
    <li>
      <%= link_to("ログアウト", "/logout",{method: "post"}) %>
    </li>
  <% else %>
    <li>
      <%= link_to("新規ユーザー登録", "/users/signup") %>
    </li>
    <li>
      <%= link_to("ログイン", "/login") %>
    </li>
  <% end %>
</ul>
</header>

<div class="post_edit">
  <div class="post_edit_wrapper">
    <div class="post_edit_form">
      <div class="post_edit_heading">
        <h3>投稿内容編集</h3>
      </div>
      <% if @error_message %>
        <div class="form-error">
          <%= @error_message %>
        </div>
      <% end %>
    <%= form_tag("/posts/#{@post.id}/update",{multipart: true}) do %>
    <div class="item_edit_name">
      <p>タイトル（※必ずご入力ください）</p>
      <input name="item_name" value="<%= @post.item_name %>">
      <p>建物名/場所</p>
      <input name="place_name" value="<%= @post.place_name %>">
      <p>設計</p>
      <input name="designer" value="<%= @post.designer %>">
      <p>画像</p>
      <input name="image" type="file">
      <input type="submit" value="更新">
    </div>
    <% end %>
    </div>
  </div>
</div>

<footer>
<div class="footer-logo">
  <% if @current_user %>
    <%= link_to("archipicture", "/posts/index") %>
  <% else %>
    <%= link_to("archipicture", "/") %>
  <% end %>
</div>
</footer>